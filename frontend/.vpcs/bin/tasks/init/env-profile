#!/usr/bin/env bash
#- usage: vpcs init env-profile filename "$Content" - writes a profile file. try --help for use case. <potential deprecation warning!>
#  Content=$(cat <<-:
#     shell-script-content
#  :
#  )
#  vpcs init env-profile "$Content"


usage(){
	echo "Usage:"
  echo "Content=\$(cat <<-:
  shell-script-content
:
)
vpcs init env-profile filename \"\$Content\""
  exit 0;
}

A=($(echo "$@"))
C="$(echo "${@}" | sed -r '1 s/[a-z0-9\-]+(\.profile)?( )+/#\!\/usr\/bin\/env bash\n/')"
F="${A[0]}"
[[ "$C" =~ -{1,2}h(elp)? ]] && usage
[[ -z "$F" ]] && usage
if [[ "$F" =~ \.profile$ ]]; then
  vpcs log chatty "Profile already present in new environment profile name"
else
  F="$F.profile"
fi
P="$(locate profiles)/$F"
echo "$P"

[[ -f "$P" ]] && vpcs log debug "Overwriting existing file $P"
echo "$C" > "$P"
direnv allow
direnv reload
exit 0