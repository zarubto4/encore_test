#!/usr/bin/env bash
#- vpcs init vpcs-library - generates straight js library folder in libs.
# For creating straight js libraries for vpcs internal
LibName=$(echo "$1" | tr '[:upper:]' '[:lower:]' | tr -d '[:space:]' | tr -d '"' )
[[ -z "$LibName" ]] && vpcs log error "No library name provided." && exit 1
echo "Creating library: $LibName"
if [[ "$LibName" =~ ^[a-z\-]+$ ]]; then
  vpcs log info "Creating library: $LibName"
  pnpm exec nx generate @nx/js:lib --bundler=esbuild --name="@vpcs/$LibName" --directory="libs/vpcs/core/$LibName" --importPath="@vpcs/$LibName" --publishable=true --includeBabelRc=false --js=true --minimal=false --tags="platform vpcs" --testEnvironment=node --unitTestRunner="jest" --projectNameAndRootFormat="as-provided"
else
  vpcs log error "$1 is not a valid library name."
fi