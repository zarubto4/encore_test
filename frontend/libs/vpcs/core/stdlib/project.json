{
  "name": "@vpcs/stdlib",
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/vpcs/core/stdlib/src",
  "projectType": "library",
  "release": {
    "version": {
      "generatorOptions": {
        "packageRoot": "dist/{projectRoot}",
        "currentVersionResolver": "git-tag"
      }
    }
  },
  "tags": ["platform vpcs"],
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/vpcs/core/stdlib",
        "main": "libs/vpcs/core/stdlib/src/index.js",
        "tsConfig": "libs/vpcs/core/stdlib/tsconfig.lib.json",
        "assets": ["libs/vpcs/core/stdlib/*.md"],
        "generatePackageJson": true,
        "format": ["cjs"]
      }
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/{projectRoot}"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/vpcs/core/stdlib/jest.config.js"
      }
    }
  }
}
